                                            "$index0 = 0",
                                            "Foreach($NIC in $NICs)",
                                            "{",
                                            "$index1 = $Nic.Index",
                                            "IF($index1 -ge $index0)",
                                            "{",
                                            "$index0 = 9999",
                                            "}",
                                            "ELSE",
                                            "{",
                                            "$Index = $NIC.Index",
                                            "$ipaddress = $NIC.IPAddress | Sort-Object",
                                            "$ipa = $ipaddress[0]",
                                            "$ipasplit = $ipa.split(\".\")",
